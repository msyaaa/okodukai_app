<header class='top-page-header'>
  <div class="top-page-contents">
    <%= link_to root_path, class:"top-img-content" do %>
      <%= image_tag("abstract-1751204_1280.png", class:"okodukai-icon") %>
      <h1 class="top-okodukai">おこづかいちょう</h1>
    <% end %>
    <div class="nav">
      <ul class="lists">
        <% if user_signed_in? %>
          <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to 'アカウントを作る', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>