<%= render 'shared/second-header' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="wrapper">
    <h2 class="signup-title">アカウント登録(とうろく)</h2>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%#= f.label :nickname, class:"signup-label" %><br />
      <%= f.text_field :nickname, autocomplete: "nickname", class:"input-signup", placeholder:"ニックネーム" %>
    </div>

    <div class="field">
      <%#= f.label :password, class:"signup-label" %>
      <%# if @minimum_password_length %>
      <%# <em> %>
      <%# ( %>
        <%#= @minimum_password_length %> 
      <%# characters minimum)</em> %>
      <%# end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input-signup font", placeholder:"パスワード6文字以上(いじょう)の半角英(えい)数字" %>
    </div>

    <div class="field">
      <%#= f.label :password_confirmation, class:"signup-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-signup font", placeholder:"パスワード確認用(かくにんよう)" %>
    </div>

    <div class="actions">
      <%= f.submit "登録(とうろく)", class:"signup-btn" %>
    </div>
 </div>
<% end %>
<%#= render "users/shared/links" %>
